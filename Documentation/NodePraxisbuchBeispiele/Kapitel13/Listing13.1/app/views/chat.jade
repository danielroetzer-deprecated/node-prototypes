html
    head
        script(src="/js/jquery.js")
    body
        div#msgs(style="height:400; width:400; overflow: scroll;")
        form#chatForm
            input#name(type="text")
            input#msg(type="text")
            button#sendBtn Send
            script.
                var socket = new WebSocket('ws://localhost:8181/', 'chat');
                $('#sendBtn').on('click', function (e) {
                    e.preventDefault();
                    var name = $('#name').val(),
                    msg = $('#msg').val();
                    socket.send('{"name": "' + name + '", "msg": "' + msg + '"}');
                    $('#msg').val('');
                });
                socket.onmessage = function (msg) {
                    var data = JSON.parse(msg.data);
                    var msg = $('<div>' + data.name + ': ' + data.msg + '</div>');
                    $('#msgs').append(msg);
                };
